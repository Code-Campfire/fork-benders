{
    "extends": [
        "next/core-web-vitals",
        "prettier" // Disables formatting rules (keep last)
    ],
    "plugins": ["import"],
    "rules": {
        "import/order": [
            "error",
            {
                "groups": [
                    "builtin",
                    "external",
                    "internal",
                    "parent",
                    "sibling",
                    "index"
                ],
                "newlines-between": "always",
                "alphabetize": { "order": "asc" }
            }
        ]
    },
    "settings": {
        "import/resolver": {
            "typescript": {}
        }
    }
}
