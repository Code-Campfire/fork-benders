{
    "extends": [
        "eslint:recommended",
        "next/core-web-vitals",
        "prettier" // Disables formatting rules (keep last)
    ],
    "env": {
        "browser": true,
        "es2021": true,
        "node": true
    },
    "plugins": ["import"],
    "rules": {
        // === IMPORT ORGANIZATION ===
        "import/order": [
            "error",
            {
                "groups": [
                    "builtin",
                    "external",
                    "internal",
                    "parent",
                    "sibling",
                    "index"
                ],
                "newlines-between": "always",
                "alphabetize": { "order": "asc" }
            }
        ],
        "import/no-duplicates": "error",
        "import/newline-after-import": "error",

        // === CODE QUALITY ===
        "no-console": "warn",
        "no-nested-ternary": "warn",
        "consistent-return": "error",
        "default-param-last": "error",

        // === REACT-SPECIFIC ===
        "react/jsx-no-useless-fragment": "error",
        "react/self-closing-comp": "error",
        "react/jsx-curly-brace-presence": [
            "error",
            { "props": "never", "children": "never" }
        ],

        // === NEXT.JS ===
        "@next/next/no-html-link-for-pages": "off"
    },
    "overrides": [
        {
            "files": ["*.js"],
            "parser": "espree",
            "parserOptions": {
                "ecmaVersion": "latest",
                "sourceType": "module"
            }
        }
    ],
    "settings": {
        "import/resolver": {
            "typescript": {}
        }
    }
}
